<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSauna"
    android:background="@drawable/main_menu">

    <ImageView
        android:id="@+id/iV_sauna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fon4" />

    <TextView
        android:id="@+id/text_sauna_1"
        android:layout_width="381dp"
        android:layout_height="78dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/pt_serif_bold"
        android:gravity="center"
        android:text="@string/sauna_tx1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iV_sauna" />

    <TextView
        android:id="@+id/textView_sauna2"
        android:layout_width="381dp"
        android:layout_height="216dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pt_serif"
        android:gravity="center"
        android:text="@string/tx_sauna2"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iV_sauna" />

    <ImageButton
        android:id="@+id/im_btn_sauna_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:background="#91847E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iV_sauna"
        app:srcCompat="@drawable/svg_home"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>

